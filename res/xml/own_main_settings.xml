<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/own_settings_title" >

<PreferenceScreen android:key="own_settings_logo"
                  android:enabled="false"
                  android:layout="@layout/own_settings_logo" />

    <PreferenceCategory
        android:title="@string/own_cat_title">
        
        <!-- Interface Settings -->
        <PreferenceScreen
                android:id="@+id/own_interface_settings"
                android:title="@string/interface_settings_title"
                android:fragment="com.android.settings.own.InterfaceSettings"
                />   

		<!-- Button Settings -->
        <PreferenceScreen
                android:id="@+id/button_settings"
                android:title="@string/button_pref_title"
                android:fragment="com.android.settings.ButtonSettings"
                />

        <!-- Lock Screen Settings -->        
        <PreferenceScreen
                android:id="@+id/lock_settings"
                android:title="@string/own_lockscreen_title"
                android:fragment="com.android.settings.own.LockSettings"
                />  

        <!-- Notification manager -->
        <dashboard-tile
                android:id="@+id/notification_manager"
                android:title="@string/notification_manager"
                android:fragment="com.android.settings.notification.NotificationManagerSettings"
                />

		 <!-- Animation Settings -->
         <PreferenceScreen
                android:id="@+id/own_ani_settings"
                android:title="@string/ani_settings_title"
                android:fragment="com.android.settings.own.AniSettings"
                />   
                
		 <!-- Extra Settings -->
		 <PreferenceScreen
                android:id="@+id/own_extra_settings"
                android:title="@string/extra_settings_title"
                android:fragment="com.android.settings.own.ExtraSettings"
                />      

        <!-- Change Log -->
		<PreferenceScreen android:key="changelog"
				android:title="@string/changelog_title"
				android:fragment="com.android.settings.own.ChangeLog" 
				/>
     
	</PreferenceCategory>

</PreferenceScreen>
