<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/own_settings_title" >

        <PreferenceScreen android:key="own_settings_logo"
                          android:enabled="false"
                          android:layout="@layout/own_settings_logo_row" />

    <PreferenceCategory
        android:key="own_categories"
        android:title="@string/own_categories_title" >
        
		<!-- StatusBar -->
        <PreferenceScreen
                android:id="@+id/status_bar_settings"
                android:title="@string/status_bar_title"
                android:fragment="com.android.settings.cyanogenmod.StatusBarSettings"
                 />
                 
        <!-- Notification drawer -->
        <PreferenceScreen
            android:id="@+id/notification_drawer_settings"
            android:title="@string/notification_drawer_title"
            android:fragment="com.android.settings.cyanogenmod.NotificationDrawerSettings"
                />

        <!-- Buttons -->
        <PreferenceScreen
                android:id="@+id/button_settings"
                android:title="@string/button_pref_title"
                android:fragment="com.android.settings.ButtonSettings"
                />

        <!-- Recents -->
        <PreferenceScreen
            android:id="@+id/recents_settings"
            android:fragment="com.android.settings.own.RecentsSettings"
            android:title="@string/recents_settings_title"
            />

        <!-- Lockscreen Settings -->
        <PreferenceScreen
            android:key="own_lockscreen_settings"
            android:fragment="com.android.settings.own.LockscreenSettings"
            android:title="@string/own_lockscreen_settings_title" />

        <!-- Gesture Settings -->
        <PreferenceScreen
            android:id="@+id/gesture_settings"
            android:fragment="com.android.settings.own.GestureSettings"
            android:title="@string/own_gesture_settings"
            />

        <!-- Animation Settings -->
        <PreferenceScreen
            android:key="animation_settings"
            android:title="@string/animation_title"
            android:fragment="com.android.settings.own.animation.AnimationSettings" 
            />
            
		<!-- Changelog 
        <PreferenceScreen 
         	android:key="translator"
         	android:title="@string/changelog_ownrom_title"
         	android:fragment="com.android.settings.own.Changelog" 
         	/>    -->    

	</PreferenceCategory>
	
</PreferenceScreen>
