<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/sound_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

        <!-- AudioFX -->
        <PrefernceScreen
            android:id="@+id/audiofx_settings"
            android:title="@string/audiofx_title">
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="org.cyanogenmod.audiofx"
                android:targetClass="android.media.action.DISPLAY_AUDIO_EFFECT_CONTROL_PANEL" />
        </preferenceScreen>
    
        <!-- Viper4Android -->
       	<PreferenceScreen
                android:key="@+id/viper_settings"
                android:title="@string/viper_title">
            <intent android:action="android.intent.action.MAIN"
                    android:targetPackage="com.vipercn.viper4android_v2"
                    android:targetClass="com.vipercn.viper4android_v2.activity.ViPER4Android" />
        </PreferenceScreen>
        
        <!-- Live Volume Steps -->        
        <PreferenceScreen
                android:key="volume_steps"
                android:fragment="com.android.settings.own.VolumeSteps"
                android:title="@string/volume_steps_title" 
                />

		<!-- Camera Shutter Sound -->
		<SwitchPreference
				android:key="camera_sounds"
				android:title="@string/camera_sounds_title"
				android:summary="@string/camera_sounds_summary"
				android:defaultValue="true" 
				/>

</PreferenceScreen>
